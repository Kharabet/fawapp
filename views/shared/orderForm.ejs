<form class="form-horizontal order-form" enctype='multipart/form-data' role="form" action="/api/send-email" method="POST">
  <div class="form-group row">
    <label class="col-sm-3 control-label">Ваше Ім'я:&nbsp;
      <i class="fa fa-info-circle" data-toggle="tooltip" title="Please insert your name"></i>
    </label>
    <div class="col-sm-9">
      <input type="text" class="form-control" required name="customerName" />
      <span class="help-block error"></span>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-3 control-label">Email:&nbsp;
      <i class="fa fa-info-circle" data-toggle="tooltip" title="Please insert your e-mail"></i>
    </label>
    <div class="col-sm-9">
      <input type="email" class="form-control" required name="customerEmail" />
      <span class="help-block error"></span>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-3 control-label">Телефон:&nbsp;
      <i class="fa fa-info-circle" data-toggle="tooltip" title="Please insert your phone"></i>
    </label>
    <div class="col-sm-9">
      <input type="tel" class="form-control" pattern="^(0|[1-9][0-9]*)$" name="customerPhone" />
      <span class="help-block error"></span>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-3 control-label">Коментар:&nbsp;
      <i class="fa fa-info-circle" data-toggle="tooltip" title="Please insert your comment"></i>
    </label>
    <div class="col-sm-9">
      <textarea class="form-control" name="customerComment"></textarea>
      <span class="help-block error"></span>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-3 control-label">Файл з ТЗ:&nbsp;
      <i class="fa fa-info-circle" data-toggle="tooltip" title="Please insert your file"></i>
    </label>
    <div class="col-sm-9">
      <label class="inputfile-label btn">
        <input type="file" class="inputfile" name="customerFile" />
        <span class="filename">Завантажити</span>
        <!-- <span class="filename"></span> -->
      </label>
    </div>
  </div>

  <div class="text-right buttons">
    <button type="button" class="btn btn-default close-modal">Закрити</button>
    <button type="submit" class="btn btn-success submit">Відправити</button>
  </div>
</form>